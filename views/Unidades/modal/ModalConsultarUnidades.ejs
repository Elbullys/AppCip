<!-- Modal para mostrar los detalles del componente -->
<div class="modal fade" id="consultaUnidadesModal" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title titulo_modal">Selecciona una Unidad</h5>
 <button type="button" class="btn-close-custom btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times"></i></button> 
            </div>
            
            <div class="modal-body">  
                <div class="card-body"> 
                    <div class="input-group mb-3">
                        <input type="text" id="inputBusqueda" class="form-control" placeholder="Buscar unidad...">
                        <button id="btnBuscar" class="btn btn-primary" onclick="BuscarUnidad()">Buscar</button>
                    </div>
                </div>
                  </div>  <!-- Cierre de modal-body -->
                <div class="table-responsive mb-3">  <!-- Cambié mb-5 a mb-3 para mejor espaciado -->
                    <table id="table_Modal_Consulta" class="table tableModalConsulta table-striped table-hover table-sm" style="width:100%">
                        <thead>
                            <tr>
                                <th scope="col">Id Unidad</th>
                                <th scope="col">Tipo de Unidad</th>
                                <th scope="col">Unidad</th>
                                <th scope="col">Municipio</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- DataTable llenará aquí dinámicamente -->
                        </tbody>
                    </table>
                </div>
                
                <div class="text-center mt-2">  <!-- Botón de selección al final del body -->
                    <button type="button" id="btnSeleccionar" class="btn btn-primary">Seleccionar</button>
                    <!-- Agregué 'disabled' por defecto; actívalo con JS al seleccionar fila -->
                </div>
          

        </div>
    </div>
</div>
